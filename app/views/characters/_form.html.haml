= form_for @character do |f|
  - if @character.errors.any?
    #error_explanation
      %h2= "#{pluralize(@character.errors.count, "error")} prohibited this character from being saved:"
      %ul
        - @character.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.label :name, class:'input-group'
    = f.text_field :name, class: 'form-control', required: true, autofocus: true

  .form-group
    = f.label :toughness
    = f.number_field :toughness, class: 'form-control', required: true, max: 10, min: 0

  .form-group
    = f.label :power
    = f.number_field :power, class: 'form-control', required: true, max: 10, min: 0

  .form-group
    = f.label :avatar
    = f.file_field :avatar, class: 'form-control', required: action_name == 'new', value: @character.avatar_file_name

  .d-flex.justify-content-end
    = link_to 'Back', characters_path, class: 'btn btn-sm btn-outline-secondary'
    = f.submit 'Save', class: 'btn btn-primary btn-inline ml-3'
